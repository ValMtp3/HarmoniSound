{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-4xl mb-4">Album index</h1>

        <table class="table-auto w-full mb-4">
            <thead>
                <tr class="bg-green-500 text-white">
                    <th class="px-4 py-2">Id</th>
                    <th class="px-4 py-2">Title</th>
                    <th class="px-4 py-2">Release Date</th>
                    <th class="px-4 py-2">Type</th>
                    <th class="px-4 py-2">Thumbnail</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for album in albums %}
                <tr class="text-center">
                    <td class="border px-4 py-2">{{ album.id }}</td>
                    <td class="border px-4 py-2">{{ album.title }}</td>
                    <td class="border px-4 py-2">{{ album.releasedate ? album.releasedate|date('Y-m-d') : '' }}</td>
                    <td class="border px-4 py-2">{{ album.type }}</td>
                    <td class="border px-4 py-2">
                        <img src="{{ album.thumbnail }}" alt="{{ album.title }}">
                    </td>
                    <td class="border px-4 py-2">
                        <a href="{{ path('app_album_show', {'id': album.id}) }}" class="text-green-500 hover:text-green-800">show</a>
                        <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="text-green-500 hover:text-green-800">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center py-4">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_album_new') }}" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Create new</a>
    </div>
{% endblock %}
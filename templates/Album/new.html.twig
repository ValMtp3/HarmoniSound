{% extends 'base.html.twig' %}

{% block title %}New Album{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4 text-center">Create new Album</h1>

    <div class="w-full max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Create</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_album_index') }}" class="text-green-500 hover:text-green-800">back to list</a>
{% endblock %}